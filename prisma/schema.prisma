generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String      @id @default(uuid())
  username       String      @unique
  Pubkey         String
  name           String?
  subId          String
  ProfilePicture String?
  orders          Order[]
  PartialSignatures  PartialKey[]
}

model Order {
  id             String      @id @default(uuid())
  userId         String
  amount         Int
  Signature      String
  paymentStatus  String
  user           User        @relation(fields: [userId], references: [id])
}

model PartialKey {
  id             String      @id @default(uuid())
  userId         String
  key      String
  user           User        @relation(fields: [userId], references: [id])
}

model Inventory {
  id             String      @id @default(uuid())
  name           String
  price          Int
  stock         Int
  image          String
}